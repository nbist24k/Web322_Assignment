<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Article Details</title>
    <%- include('partials/head') %>
    <style>
      .article-container {
        max-width: 800px;
        margin: 0 auto;
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        overflow: hidden;
      }
      .article-image {
        width: 100%;
        height: 400px;
        object-fit: cover;
      }
      .article-content {
        padding: 2rem;
      }
      .article-meta {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin: 1rem 0;
        color: #666;
        font-size: 0.9rem;
      }
      .article-meta i {
        color: #4a90e2;
      }
      .category-badge {
        display: inline-block;
        padding: 0.3rem 0.8rem;
        background: #e9f2fe;
        color: #4a90e2;
        border-radius: 20px;
        font-size: 0.9rem;
        font-weight: 500;
      }
      .source-link {
        color: #4a90e2;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.3rem;
        margin-top: 1rem;
      }
      .source-link:hover {
        text-decoration: underline;
      }
      .back-link {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        color: #666;
        text-decoration: none;
        margin-bottom: 1rem;
      }
      .back-link:hover {
        color: #4a90e2;
      }
    </style>
  </head>
  <body class="d-flex-container">
    <%- include('partials/nav') %>

    <div class="container mt-5 content">
      <a href="/articles" class="back-link">
        <i class="bi bi-arrow-left"></i>
        Back to Articles
      </a>

      <% if (!article) { %>
      <div class="alert alert-info" role="alert">
        <i class="bi bi-info-circle-fill me-2"></i>
        Article not found or not published.
      </div>
      <% } else { %>
      <div class="article-container">
        <% if (article.featureImage) { %>
        <img
          src="<%= article.featureImage %>"
          alt="<%= article.title %>"
          class="article-image"
        />
        <% } %>

        <div class="article-content">
          <h1><%= article.title %></h1>
        </div>
      </div>
    </div>
  </body>
</html>
